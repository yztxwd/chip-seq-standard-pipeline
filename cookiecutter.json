    "bwa_index": "path/to/bwa/index",
    "bwa_mem": "",
    "skipfilter": [true, false],
    "genome_fai": "path/to/genome/fai",
    "mode": ["tf", "histone"],
    "macs2_gsize": "mm",
    "_copy_without_render": [
        "*.smk",
        "*Snakefile"
    ],
    "git_submodule": "https://github.com/yztxwd/snakemake-pipeline-general.git"
